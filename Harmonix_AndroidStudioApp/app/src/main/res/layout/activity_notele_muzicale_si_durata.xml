<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F1C0EE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecție introductivă: Durata sunetelor"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />


        <ImageView
            android:id="@+id/durata_sunete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/durata_sunete"
            android:adjustViewBounds="true"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corespondența dintre reprezentarea notelor și durata lor:"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/durata_sunete_nume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/durata_sunete_nume"
            android:adjustViewBounds="true"
            android:layout_marginBottom="24dp" />


        <Button
            android:id="@+id/next_breaks"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="#1E3A8A"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:shape="rectangle"/>
    </LinearLayout>
</ScrollView>
